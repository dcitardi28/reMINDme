<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context="com.example.dan.remindme.Menu">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="28dp">

        <Button
            android:id="@+id/calendar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:text="Calendar" />

        <Button
            android:id="@+id/tasks"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignBaseline="@+id/calendar"
            android:layout_alignBottom="@+id/calendar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="Tasks" />

        <Button
            android:id="@+id/games"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignLeft="@+id/calendar"
            android:layout_alignStart="@+id/calendar"
            android:layout_below="@+id/tasks"
            android:layout_marginTop="11dp"
            android:text="Games" />

        <Button
            android:id="@+id/help"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignLeft="@+id/tasks"
            android:layout_alignStart="@+id/tasks"
            android:layout_alignTop="@+id/games"
            android:layout_marginTop="46dp"
            android:text="Resources" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
